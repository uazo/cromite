+        "https://dns.adguard-dns.com/dns-query",
+        "AdGuard DNS (Default)" /*ui_name*/,
+        "https://adguard-dns.io/en/privacy.html" /*privacy_policy*/,
+        /*display_globally=*/true,
+        /*display_countries=*/{},
+        LoggingLevel::kNormal),
