+  SnapshotWillContainInjections({});
+
+  MockResponseCallback callback;
+
+  // Call testee:
+  auto headers = net::HttpResponseHeaders::TryToCreate("");
+  CHECK(headers);
+  csp_injector_->InsertContentSecurityPolicyHeadersIfApplicable(
