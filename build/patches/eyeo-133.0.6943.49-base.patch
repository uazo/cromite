+  // Spurious removal:
+  configuration_->RemoveCustomFilter(kCustomFilter2);
+
+  MaybeRecreateConfiguration();
+  EXPECT_THAT(configuration_->GetCustomFilters(),
+              testing::UnorderedElementsAre(kCustomFilter1, kCustomFilter3));
