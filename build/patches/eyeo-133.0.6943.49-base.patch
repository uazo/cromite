+  EXPECT_EQ(ActivepingTelemetryTopicProvider::DefaultAuthToken(),
+            EYEO_TELEMETRY_ACTIVEPING_AUTH_TOKEN);
+#else
+  EXPECT_EQ(ActivepingTelemetryTopicProvider::DefaultAuthToken(), "");
+#endif
