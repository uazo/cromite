+    private final int mMinHorizontalSpacing;
+    private final int mMaxHorizontalSpacing;
+    private final int mMaxWidth;
+
+    private int mVerticalSpacing;
+    private int mMaxRows = 4;
+    private int mMaxColumns = 4;
